@model Cinema_Manage.Models.NguoiDung

<style>
    .center-table {
        display: table;
        margin: 0 auto;
        height: 100vh;
    }

    .center-table-cell {
        display: table-cell;
    }

    .login-container {
        background-color: rgba(105, 105, 105, 0.8); /* Dark gray background with transparency */
        padding: 20px;
        border-radius: 10px;
    }

    .form-control {
        margin-bottom: 15px;
    }
    .a {
        width: 300px;
        font-weight: bold;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="center-table">
    <div class="center-table-cell">
        <div class="login-container">
            <h2>Đăng ký tài khoản</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center a" })
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    Tài khoản
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Mật khẩu
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    Tên
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KhachHang.Ten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KhachHang.Ten, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    Địa Chỉ
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KhachHang.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KhachHang.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    Số Điện Thoại
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KhachHang.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KhachHang.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng Ký" class="btn btn-primary" />
                </div>
            </div>
            <p class="text-danger text-center">@ViewBag.ErrorMessage</p>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Login")
</div>
