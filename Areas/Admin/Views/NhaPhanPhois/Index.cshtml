@model IEnumerable<Cinema_Manage.Models.NhaPhanPhoi>

@{
    ViewBag.Title = "Index";
}

<h2>Nhà Phân Phối</h2>


<table class="table">
    <tr>
        <th>
            Nhà Phân Phối
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNPP)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID.Trim() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID.Trim() })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Nhà Phân Phối Mới", "Create")
</p>