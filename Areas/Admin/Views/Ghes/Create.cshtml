@model Cinema_Manage.Models.Ghe

@{
    ViewBag.Title = "Create";
}

<h2>Thêm Mới</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Phòng Chiếu
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MaPhong, (SelectList)ViewBag.PhongChieuList, "Chọn phòng chiếu", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Loại Ghế
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LoaiGhe, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Ghế thường", Value = "1" },
                    new SelectListItem { Text = "Ghế VIP", Value = "2" }
                }, "Chọn loại ghế", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoaiGhe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số Ghế
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoGhe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoGhe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tình Trạng
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TinhTrang)
                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
