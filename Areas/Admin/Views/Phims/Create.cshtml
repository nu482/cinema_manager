@model Cinema_Manage.Models.Phim

@{
    ViewBag.Title = "Create";
}

<h2>Thêm Phim Mới</h2>


@using (Html.BeginForm("Create", "Phims", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Phim</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Mã Phim
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaPhim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaPhim, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Tên Phim
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenPhim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenPhim, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Thể Loại
        <div class="col-md-10">
            @Html.DropDownList("MaTheLoai", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaTheLoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Nhà Phân Phối Phim
        <div class="col-md-10">
            @Html.DropDownList("MaNPP", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaNPP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Đạo Diễn
        <div class="col-md-10">
            @Html.EditorFor(model => model.DaoDien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DaoDien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Thời Lượng
        <div class="col-md-10">
            @Html.EditorFor(model => model.ThoiLuong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ThoiLuong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Mô Tả
        <div class="col-md-10">
            @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Link Trailer
        <div class="col-md-10">
            @Html.EditorFor(model => model.Trailer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Trailer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Hình ảnh
        <div class="col-md-10">
            <input type="file" name="HinhAnhPhim" id="HinhAnhPhim" class="form-control" accept="image/*">
            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
