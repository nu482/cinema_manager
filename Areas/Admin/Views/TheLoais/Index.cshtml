@model IEnumerable<Cinema_Manage.Models.TheLoai>

@{
    ViewBag.Title = "Index";
}

<h2>Thể Loại</h2>


<table class="table">
    <tr>
        <th>
            Thể Loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTheLoai)
        </td>
        <td>
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaTheLoai.Trim() })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Thể Loại Mới", "Create")
</p>