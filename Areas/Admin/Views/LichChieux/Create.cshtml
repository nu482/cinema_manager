@model Cinema_Manage.Models.LichChieu

@{
    ViewBag.Title = "Create";
}

<h2>Lịch Chiếu Mới</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Phim
            <div class="col-md-10">
                @Html.DropDownList("MaPhim", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaPhim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Phòng Chiếu
            <div class="col-md-10">
                @Html.DropDownList("MaPhongChieu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaPhongChieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Thời Gian Chiếu
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ThoiGian, "{0:MM/dd/yyyy HH:mm}", new { @class = "form-control datetimepicker" })
                @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở Lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script>
        $(function () {
            $('.datetimepicker').datetimepicker({
                format: 'MM/DD/YYYY HH:mm'
            });
        });
    </script>
}
