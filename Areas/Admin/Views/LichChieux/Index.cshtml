@model PagedList.IPagedList<Cinema_Manage.Models.LichChieu>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Lịch Chiếu</h2>


<table class="table">
    <tr>
        <th>
            Mã Lịch Chiếu
        </th>
        <th>
            Phim
        </th>
        <th>
            Phòng Chiếu
        </th>
        <th>
            Thời Gian
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLichChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phim.TenPhim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhongChieu.TenPhong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGian)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaLichChieu.Trim() }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaLichChieu.Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaLichChieu.Trim() })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
Trang @(Model.PageCount<Model.PageNumber ? 0:Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
